snippet pvinp
	<InputProperty name="${1:Input}"
		command="SetInputConnection">
		<ProxyGroupDomain name="groups">
			<Group name="sources"/>
			<Group name="filters"/>
		</ProxyGroupDomain>
		<DataTypeDomain name="input_type">
			<DataType value="${2:vtkDataSet}"/>
		</DataTypeDomain>
		<InputArrayDomain name="input_scalars"
			number_of_components="${3:1}">
			<Property name="$1"
				function="FieldDataSelection" />
		</InputArrayDomain>
		<Documentation>
			${4:Input to process}.
		</Documentation>
	</InputProperty>

snippet pvdbl
	<DoubleVectorProperty name="${1:Name}"
		label="${2:Label}"
		command="Set$1"
		number_of_elements="${3:1}"
		default_values="${4:0}"
		panel_visibility="${5:default}">
		<DoubleRangeDomain name="range" min="${6:0.0}" max="${7:1.0}" />
		<Documentation>
			${8:Documentation}.
		</Documentation>
	</DoubleVectorProperty>

snippet pvint
	<IntVectorProperty name="${1:Name}"
